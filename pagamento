<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        #payment-container {
            text-align: center;
        }

        #confirm-button {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            border: none;
            background-color: #3498db;
            color: #fff;
            border-radius: 5px;
            margin-top: 20px;
        }

        #confirm-button:hover {
            animation: shake 0.5s;
        }

        @keyframes shake {
            0%, 100% {
                transform: translate(0, 0);
            }
            10%, 30%, 50%, 70%, 90% {
                transform: translate(5px, -5px);
            }
            20%, 40%, 60%, 80% {
                transform: translate(-5px, 5px);
            }
        }
    </style>
    <script>
        function confirmPayment() {
            var paymentValue = document.getElementById('payment-value').value;
            var messageContainer = document.getElementById('message-container');

            if (parseFloat(paymentValue) < 139) {
                messageContainer.innerHTML = 'Valor não aceitável, tente novamente';
                return;
            }

            var confirmButton = document.getElementById('confirm-button');
            if (parseFloat(paymentValue) < 139) {
                messageContainer.innerHTML = 'Valor não aceitável, tente novamente';
                return;
            } else {
                messageContainer.innerHTML = '';
            }

            if (parseFloat(paymentValue) < 139) {
                var confirmButton = document.getElementById('confirm-button');
                confirmButton.disabled = true;
                confirmButton.innerHTML = 'Aguarde...';

                setTimeout(function () {
                    confirmButton.disabled = false;
                    confirmButton.innerHTML = 'Confirmar';
                }, 5000); // Desabilita o botão por 5 segundos
            } else {
                var confirmButton = document.getElementById('confirm-button');
                confirmButton.innerHTML = 'MUITO OBRIGADO BEBEZINHO';
                confirmButton.style.backgroundColor = '#27ae60';
                confirmButton.disabled = true;
            }
        }
    </script>
</head>
<body>

<div id="payment-container">
    <p>Quanto você vai me pagar hoje?</p>
    <input type="number" id="payment-value" placeholder="Digite o valor do pagamento">
    <button id="confirm-button" onclick="confirmPayment()">Confirmar</button>
    <p id="message-container"></p>
</div>

</body>
</html>
